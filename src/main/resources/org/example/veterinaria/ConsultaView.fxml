<?xml version="1.0" encoding="UTF-8"?>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.veterinaria.viewcontroller.ConsultaViewController">

    <top>
        <Label text="Gestión de Consultas" style="-fx-font-size:18; -fx-font-weight:bold;" BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="10" padding="15">
            <GridPane hgap="10" vgap="10">
                <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Fecha:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dpFecha" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Mascota:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbMascota" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Categoría Edad:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbCategoriaEdad" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Tipo:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbTipo" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Valor Base:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="txtBaseValue" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10">
                <Button fx:id="btnCrear" text="Crear"/>
                <Button fx:id="btnActualizar" text="Actualizar"/>
                <Button fx:id="btnEliminar" text="Eliminar"/>
                <Button fx:id="btnBuscar" text="Buscar"/>
            </HBox>

            <TableView fx:id="tablaConsultas" prefHeight="200">
                <columns>
                    <TableColumn fx:id="colId" text="ID"/>
                    <TableColumn fx:id="colFecha" text="Fecha"/>
                    <TableColumn fx:id="colMascota" text="Mascota"/>
                    <TableColumn fx:id="colCategoria" text="Categoría Edad"/>
                    <TableColumn fx:id="colTipo" text="Tipo"/>
                    <TableColumn fx:id="colBase" text="Valor Base"/>
                    <TableColumn fx:id="colFinal" text="Valor Final"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
