<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.veterinaria.viewcontroller.MascotaViewController">

    <top>
        <Label text="Gestión de Mascotas" style="-fx-font-size: 18px; -fx-padding: 10;" />
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <GridPane hgap="10" vgap="10">
                <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNombre" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Especie:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbEspecie" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Peso:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtPeso" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Raza:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtRaza" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Edad:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEdad" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Dueño (ID Cliente):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtDueno" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Crear" fx:id="btnCrear"/>
                <Button text="Actualizar" fx:id="btnActualizar"/>
                <Button text="Eliminar" fx:id="btnEliminar"/>
                <Button text="Buscar" fx:id="btnBuscar"/>
            </HBox>

            <TableView fx:id="tablaMascotas">
                <columns>
                    <TableColumn text="ID" fx:id="colId" prefWidth="80"/>
                    <TableColumn text="Nombre" fx:id="colNombre" prefWidth="120"/>
                    <TableColumn text="Especie" fx:id="colEspecie" prefWidth="100"/>
                    <TableColumn text="Raza" fx:id="colRaza" prefWidth="120"/>
                    <TableColumn text="Edad" fx:id="colEdad" prefWidth="100"/>
                    <TableColumn text="Peso" fx:id="colPeso" prefWidth="80"/>
                    <TableColumn text="Dueño" fx:id="colDueno" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
